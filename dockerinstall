---
- hosts: docker
  become: true
  tasks:
    - name: install dependency
      apt:
        name: "{{item}}"
        state: present
        update_cache: yes
      loop:
        - apt-transport-https
        - ca-certificates
        - curl
        - gnupg-agent
        - software-properties-common
- name: install GPG
      apt_key:
        url: https://download.docker.com/linux/ubuntu/gpg
        state: present
- name: install default repository
      apt_repository:
        repo: deb https://download.docker.com/linux/ubuntu bionic stable
        state: present
- name: install docker
      apt:
        name: "{{item}}"
        state: latest
        update_cache: yes
      loop:
        - docker-ce
        - docker-ce-cli
        - containerd.io
- name: start dockerengine
      service:
        name: docker
        state: started
        enabled: yes
handlers:
    - name: restart docker
      service: 
        name: docker 
        state: restarted
